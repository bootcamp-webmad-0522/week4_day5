<div class="container">

    <div class="row justify-content-center">

        <div class="col-md-6">

            <h1>Editar {{title}}</h1>

            <hr>

            <form action="/libros/editar?book_id={{id}}" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Título</label>
                    <input type="text" class="form-control" id="title" name="title" value="{{title}}">
                </div>

                <div class="mb-3">
                    <label for="description" class="form-label">Descripción</label>
                    <input type="text" class="form-control" id="description" name="description" value="{{title}}">
                </div>

                <div class="mb-3">
                    <label for="author" class="form-label">Autor/a</label>
                    <select name="esteNameEsImportante" class="form-select" multiple>
                        <option value="IDdelAutor">Nombre del autor/a 1</option>
                        <option value="IDdelAutor">Nombre del autor/a 2</option>
                        <option value="IDdelAutor">Nombre del autor/a 3</option>
                        <option value="IDdelAutor">Nombre del autor/a 4</option>
                        <option value="IDdelAutor">Nombre del autor/a 5</option>
                        <option value="IDdelAutor">Nombre del autor/a 6</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="rating" class="form-label">Puntuación</label>
                    <input type="number" class="form-control" id="rating" name="rating" value="{{rating}}">
                </div>

                <button type="submit" class="btn btn-dark">Editar libro</button>
            </form>

        </div>
    </div>


</div>